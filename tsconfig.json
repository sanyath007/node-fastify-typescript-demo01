{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": [
            "node_modules/@types"
        ]        
    },
    "include": ["src/**/*"],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
